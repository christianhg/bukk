{
  "name": "bukk",
  "description": "Functional programming for Norwegians ⛷️",
  "keywords": [
    "functional-programming",
    "fp",
    "curry",
    "data-last",
    "library"
  ],
  "version": "1.0.0",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/bukk.js",
  "repository": "christianhg/bukk",
  "author": {
    "name": "Christian Grøngaard",
    "email": "christianhg@gmail.com"
  },
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "rm -rf dist",
    "build": "npm run lint & nyc ava && webpack -p",
    "lint": "standard --verbose | snazzy",
    "test": "npm run lint & nyc ava",
    "watch:test": "npm run lint & ava --watch"
  },
  "ava": {
    "files": "tests/*.js",
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "src/*.js"
    ]
  },
  "babel": {
    "plugins": [
      "babel-plugin-add-module-exports",
      "transform-object-rest-spread"
    ],
    "presets": [
      "es2015"
    ]
  },
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "coveralls": "^2.13.0",
    "nyc": "^10.2.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.1",
    "webpack": "^2.3.3"
  }
}
